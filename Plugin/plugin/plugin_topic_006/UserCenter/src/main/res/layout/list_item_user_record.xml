<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@mipmap/icon_record_type_point"/>

        <com.zeewain.base.widgets.GradientTextView
            android:id="@+id/txt_title_record_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:includeFontPadding="false"
            android:textSize="16sp"
            app:drawMode="vertical"
            app:startColor="@color/user_center_gradient_start_color"
            app:endColor="@color/user_center_gradient_end_color"
            android:textColor="@android:color/white" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_record_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"/>

</LinearLayout>