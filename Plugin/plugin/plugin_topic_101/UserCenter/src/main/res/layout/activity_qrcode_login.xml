<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="621dp"
    android:layout_height="328dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/img_qrcode_login_bg"
    tools:context=".ui.login.QrcodeLoginActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_qrcode_login_qrcode"
        android:layout_width="138dp"
        android:layout_height="138dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="65dp"
        android:layout_marginTop="77dp"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="0px"
        app:cardBackgroundColor="#FFFFFFFF">

        <ImageView
            android:id="@+id/iv_qrcode_login_qrcode"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            />

        <ImageView
            android:id="@+id/iv_qrcode_login_refresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_refresh"
            android:layout_gravity="center"
            android:contentDescription="@null" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="162dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@+id/card_qrcode_login_qrcode"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="13dp"
        app:cardCornerRadius="13dp"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="0px"
        app:cardBackgroundColor="#3A101830"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:textColor="#FFF"
            android:text="请用手机 扫一扫 登录"/>
    </androidx.cardview.widget.CardView>
    


</androidx.constraintlayout.widget.ConstraintLayout>