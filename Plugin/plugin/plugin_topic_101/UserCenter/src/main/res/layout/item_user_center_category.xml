<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_user_center_category"
    android:layout_width="181dp"
    android:layout_height="74dp"
    android:background="@drawable/selector_user_left_item_frame"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_user_center_category"
        android:layout_width="@dimen/src_dp_18"
        android:layout_height="@dimen/src_dp_18" />

    <com.zeewain.base.widgets.GradientTextView
        android:id="@+id/txt_user_center_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="2dp"
        android:textColor="@android:color/white"
        android:paddingBottom="6dp"
        app:hasDraw="false"
        android:textSize="18sp" />
</LinearLayout>
