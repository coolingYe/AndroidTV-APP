<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_video_root"
    android:focusable="true"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="0px"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="0dp">
        <!--自定义的VideoView  做了绘制改变，和网络地址许可-->
        <com.zee.launcher.home.widgets.MyVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>
    <!--底部控制栏  开始时间 进度条 结束时间-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_play_small"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="@dimen/src_dp_2"
                android:src="@mipmap/icon_pause"
                android:scaleType="centerInside"
                android:textSize="9sp" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/time_seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.5dp"
                android:layout_weight="1"
                android:max="100"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@null" />

            <TextView
                android:id="@+id/tv_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="00:00"
                android:fontFamily="@font/font_demibold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/src_font_12" />

            <TextView
                android:id="@+id/tv_dividing_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="/"
                android:fontFamily="@font/font_demibold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/src_font_12" />

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="00:00"
                android:fontFamily="@font/font_demibold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/src_font_12" />
        </LinearLayout>
    </RelativeLayout>

    <!--视频结束时 显示黑色背景-->
    <RelativeLayout
        android:id="@+id/lay_finish_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:visibility="gone" />
    <!--视频播放中 控制暂停和播放的按钮-->
    <ImageButton
        android:id="@+id/btn_play_or_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/icon_player"
        android:focusable="false"
        android:visibility="visible" />

    <!--视频结束时 显示重播图标-->
    <ImageButton
        android:id="@+id/btn_restart_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/icon_restart_play"
        android:visibility="gone" />
</RelativeLayout>