<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_main_item_root"
    android:layout_width="269dp"
    android:layout_height="358dp"
    android:focusable="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_main_item_gate"
        android:layout_width="155dp"
        android:layout_height="155dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79dp"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/iv_main_item_anim"
        android:layout_width="176dp"
        android:layout_height="176dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="68dp"
        android:contentDescription="@null"
        android:background="@drawable/main_item_anim"
        />

    <ImageView
        android:id="@+id/iv_main_item_title"
        android:layout_width="153dp"
        android:layout_height="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_item_anim"
        android:contentDescription="@null"
        />

    <ImageView
        android:id="@+id/iv_main_item_gate_mask"
        android:layout_width="187dp"
        android:layout_height="189dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="62dp"
        android:src="@mipmap/img_main_item_gate_mask"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>