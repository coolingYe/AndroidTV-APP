<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <View
        android:layout_width="901dp"
        android:layout_height="147dp"
        android:layout_marginTop="22dp"
        android:background="@mipmap/ic_rule_header_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_rule_back"
        android:layout_width="69dp"
        android:layout_height="23dp"
        android:layout_marginStart="@dimen/src_dp_40"
        android:layout_marginTop="@dimen/src_dp_35"
        android:background="@mipmap/ic_back_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zee.paged.HorizontalRecyclerView
        android:id="@+id/rv_rule_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/view_product_background_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>