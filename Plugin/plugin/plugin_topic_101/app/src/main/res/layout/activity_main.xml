<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@mipmap/img_home_bg"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top_user"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="44dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/selector_transparent_bg">
        
        <ImageView
            android:id="@+id/iv_top_user"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/icon_top_user"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/icon_top_icon_mask"/>

        <com.zeewain.base.widgets.GradientTextView
            android:id="@+id/tv_top_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/iv_top_user"
            app:layout_constraintBottom_toBottomOf="@+id/iv_top_user"
            app:layout_constraintLeft_toRightOf="@+id/iv_top_user"
            android:layout_marginStart="9dp"
            android:textSize="16sp"
            android:textColor="#FFF"
            android:text=" "
            android:paddingBottom="@dimen/src_dp_5"
            app:drawMode="horizontal"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_top_user"
            android:src="@mipmap/icon_top_shadow"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top_settings"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="111dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/selector_transparent_bg">

        <ImageView
            android:id="@+id/iv_top_settings"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/icon_top_settings"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/icon_top_icon_mask"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_top_settings"
            android:src="@mipmap/icon_top_shadow"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextClock
        android:id="@+id/tc_top_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="HH:mm"
        android:format24Hour="HH:mm"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:focusable="false"
        app:layout_constraintLeft_toRightOf="@+id/cl_top_settings"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zee.launcher.home.widgets.MainItemRecyclerView
            android:id="@+id/recycler_view_home_classic"
            android:layout_width="wrap_content"
            android:layout_height="358dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="113dp"
            android:paddingStart="77dp"
            android:paddingEnd="77dp"
            android:paddingBottom="56dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="@drawable/selector_transparent_bg"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <ImageView
            android:id="@+id/iv_host_unit_text"
            android:layout_width="84dp"
            android:layout_height="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/img_host_unit_text"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="39dp"/>

        <ImageView
            android:id="@+id/iv_organizer_text"
            android:layout_width="84dp"
            android:layout_height="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/img_organizer_text"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="263dp"/>

        <com.zee.launcher.home.widgets.banner.Banner
            android:id="@+id/banner_home_classic"
            android:layout_width="340dp"
            android:layout_height="31dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_organizer_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="34dp"
            android:layout_marginStart="3dp"
            android:focusable="false"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.zeewain.base.widgets.LoadingView
        android:id="@+id/loadingView_home_classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zeewain.base.widgets.NetworkErrView
        android:id="@+id/networkErrView_home_classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/layout_qrcode_login"/>

    <com.zee.launcher.home.widgets.MyVideoView
        android:id="@+id/player_view_home_classic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>