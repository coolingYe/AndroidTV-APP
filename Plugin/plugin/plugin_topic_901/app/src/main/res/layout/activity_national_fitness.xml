<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".ui.fitness.NationalFitnessActivity">

    <ImageView
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:src="@mipmap/icon_helong_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginTop="23dp"
        android:focusable="true"
        android:focusedByDefault="true"
        android:nextFocusUp="@id/plugin_item_dg"
        android:nextFocusDown="@id/plugin_item_dg"
        android:nextFocusRight="@id/plugin_item_dg"
        android:nextFocusLeft="@id/plugin_item_dg"
        android:background="@drawable/selector_transparent_bg"
        />

    <com.zee.launcher.home.widgets.BackView
        android:id="@+id/back_view_national_fitness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="21dp"
        android:nextFocusRight="@id/plugin_item_dg"
        android:nextFocusUp="@id/plugin_item_dg"
        />

    <ImageView
        android:id="@+id/iv_national_fitness_title"
        android:layout_width="262dp"
        android:layout_height="78dp"
        android:src="@mipmap/img_national_fitness_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp"
        />

    <ImageView
        android:id="@+id/iv_national_fitness_summary"
        android:layout_width="273dp"
        android:layout_height="25dp"
        android:src="@mipmap/img_helong_new_era_summary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="21dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_content_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_national_fitness_title"
        app:layout_constraintBottom_toTopOf="@+id/iv_national_fitness_summary">

        <com.zee.launcher.home.widgets.PluginItemView
            android:id="@+id/plugin_item_dg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/plugin_item_tzb"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:focusable="true"
            android:background="@drawable/selector_transparent_bg"
            android:nextFocusUp="@id/plugin_item_dg"
            android:nextFocusLeft="@id/back_view_national_fitness"
            android:nextFocusDown="@id/back_view_national_fitness"
            android:visibility="gone"
            />

        <com.zee.launcher.home.widgets.PluginItemView
            android:id="@+id/plugin_item_tzb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/plugin_item_dg"
            android:layout_marginStart="140dp"
            android:focusable="true"
            android:background="@drawable/selector_transparent_bg"
            android:nextFocusUp="@id/plugin_item_tzb"
            android:nextFocusDown="@id/back_view_national_fitness"
            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>