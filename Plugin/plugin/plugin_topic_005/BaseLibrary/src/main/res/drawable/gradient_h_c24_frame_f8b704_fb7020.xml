<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <corners android:radius="24dp"/>
        <stroke
            android:width="1dp"
            android:color="#00E8FF" />
    </shape>
</item>

<item
    android:top="2dp"
    android:bottom="2dp"
    android:left="2dp"
    android:right="2dp">
    <shape
        android:shape="rectangle">
        <corners android:radius="24dp"/>
        <gradient
            android:angle="0"
            android:startColor="#2BE7E3"
            android:endColor="#14BACE"
            android:type="linear" />
    </shape>
</item>
</layer-list>