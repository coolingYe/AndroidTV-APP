<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <ImageView
        android:layout_width="122dp"
        android:layout_height="94dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_item_user_product"
        android:layout_width="125dp"
        android:layout_height="95dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#30FFFFFF">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/img_card_back"
            android:layout_margin="4dp"
            android:padding="1dp"
          >

            <androidx.cardview.widget.CardView
                android:layout_marginTop="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="112dp"
                android:layout_height="63dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="9dp"
                app:cardElevation="0px"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/iv_item_user_product_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_item_user_product_tip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:background="#66000000"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_item_user_product_del"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000"
                    android:paddingStart="44dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="44dp"
                    android:paddingBottom="17dp"
                    android:src="@mipmap/icon_delete"
                    android:visibility="invisible" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_item_user_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="9sp" />
        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>