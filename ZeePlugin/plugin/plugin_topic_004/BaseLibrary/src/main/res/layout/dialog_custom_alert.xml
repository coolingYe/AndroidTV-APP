<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="225dp"
    android:layout_height="137dp"
    android:background="@mipmap/ic_user_center_delete_dialog">

    <LinearLayout
        android:id="@+id/ll_message_content_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginStart="@dimen/src_dp_21"
        android:layout_marginEnd="@dimen/src_dp_21"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_message_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/dialog_content_text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_message_summary_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/dialog_summary_text_color"
            android:textSize="13sp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_cancel_dialog"
        android:layout_width="63dp"
        android:layout_height="24dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/selector_user_center_dialog_text_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="取消"
        android:layout_marginBottom="9dp"
        android:textColor="@drawable/selector_user_center_dialog_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_positive_dialog" />

    <TextView
        android:id="@+id/txt_positive_dialog"
        android:layout_width="63dp"
        android:layout_height="24dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/selector_user_center_dialog_text_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="确定"
        android:textColor="@drawable/selector_user_center_dialog_text_color"
        android:textSize="12sp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_cancel_dialog"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/txt_confirm_dialog"
        android:layout_width="91dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/selector_user_center_dialog_text_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@drawable/selector_user_center_dialog_text_color"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_message_content_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>