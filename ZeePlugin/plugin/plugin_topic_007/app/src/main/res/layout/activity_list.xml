<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/img_main_home_bg"
    android:layout_height="match_parent">



    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/img_top_bar_back"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/selector_top_bar_back"
        android:scaleType="fitXY"
        android:contentDescription="@null"
        android:visibility="visible"/>
    
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/img_list_title"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="252dp"
        android:layout_height="23dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="60dp"
        android:layout_marginTop="57dp"
        android:id="@+id/rv_app_list"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



    <com.zeewain.base.widgets.LoadingView
        android:id="@+id/loadingView_app_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:focusable="false"
        />



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_app_list_empty"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="135dp"
            android:layout_height="62dp"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/img_no_data_download"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
          />

        <TextView
            android:layout_gravity="center"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="暂无数据"
           />


    </LinearLayout>




    <com.zeewain.base.widgets.NetworkErrView
        android:id="@+id/networkErrView_app_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

    <ImageView
        android:background="@mipmap/img_use"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="132dp"
        android:layout_height="17dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>