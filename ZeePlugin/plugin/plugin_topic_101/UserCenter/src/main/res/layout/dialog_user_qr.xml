<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/ic_user_info_dialog_qr_bg">

    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="@dimen/src_dp_15"
        android:layout_height="@dimen/src_dp_15"
        android:layout_marginTop="@dimen/src_dp_12"
        android:layout_marginEnd="@dimen/src_dp_15"
        android:padding="@dimen/src_dp_3"
        android:src="@drawable/selector_dialog_close_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_dialog_qr"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zeewain.base.widgets.GradientTextView
        android:id="@+id/tv_dialog_help_desc_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginStart="@dimen/src_dp_16"
        android:layout_marginEnd="@dimen/src_dp_16"
        android:text="@string/user_info_modify_info_hint_1"
        android:textColor="@android:color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_dialog_help_desc_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_dialog_qr" />

    <com.zeewain.base.widgets.GradientTextView
        android:id="@+id/tv_dialog_help_desc_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/src_dp_16"
        android:layout_marginTop="@dimen/src_dp_1"
        android:layout_marginEnd="@dimen/src_dp_16"
        android:layout_marginBottom="@dimen/src_dp_35"
        android:text="@string/user_info_modify_info_hint_2"
        android:textColor="@android:color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_help_desc_1" />

</androidx.constraintlayout.widget.ConstraintLayout>