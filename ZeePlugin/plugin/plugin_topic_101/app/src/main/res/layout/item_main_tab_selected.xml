<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_main_item_root"
    android:layout_width="269dp"
    android:layout_height="358dp"
    android:focusable="false"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_main_item_gate"
        android:layout_width="233dp"
        android:layout_height="233dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/iv_main_item_gate_mask"
        android:layout_width="262dp"
        android:layout_height="264dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/img_main_item_gate_mask_selected"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/iv_main_item_anim"
        android:layout_width="311dp"
        android:layout_height="311dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:background="@drawable/main_item_selected_anim"
        />

    <ImageView
        android:id="@+id/iv_main_item_title"
        android:layout_width="188dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_item_anim"
        android:layout_marginTop="-9dp"
        android:contentDescription="@null"
        />

</androidx.constraintlayout.widget.ConstraintLayout>