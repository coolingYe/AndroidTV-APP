<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zee.launcher.home">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Plugin_home"
        android:name=".HomeApplication"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="com.qihoo360.plugin.name"
            android:value="${PLUGIN_NAME}" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.detail.DetailActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity android:name=".ui.loading.LoadingPluginActivity" />

        <activity
            android:name=".ui.cache.CacheManagerActivity"
            android:exported="true"
            android:launchMode="singleTask" />

        <service android:name=".service.TopicService" />
    </application>

</manifest>