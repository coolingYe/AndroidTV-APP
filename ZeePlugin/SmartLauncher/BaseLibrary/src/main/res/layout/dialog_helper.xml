<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="459dp"
        android:layout_height="251dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/txt_helper_title"
            android:layout_width="459dp"
            android:layout_height="67dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#9661FF"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="问题上报"/>

        <TextView
            android:id="@+id/txt_helper_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_helper_title"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="记录错误问题，联网后自动上报！" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_helper_info"
            style="@style/GuideEditStyle"
            android:layout_width="match_parent"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/txt_helper_msg"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_helper_sure"
            android:layout_width="98dp"
            android:layout_height="46dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="17dp"
            android:focusable="true"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:rippleColor="@color/rippleColor">

            <TextView
                android:id="@+id/txt_helper_sure"
                android:layout_width="92dp"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/gradient_h_c5_0800f8_8541ce"
                android:gravity="center"
                android:text="确定"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_helper_cancel"
            android:layout_width="98dp"
            android:layout_height="46dp"
            android:focusable="true"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            android:layout_marginStart="37dp"
            android:layout_marginBottom="17dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:rippleColor="@color/rippleColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/txt_helper_cancel"
                android:layout_width="92dp"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/gradient_h_c5_0800f8_8541ce"
                android:gravity="center"
                android:text="取消"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>