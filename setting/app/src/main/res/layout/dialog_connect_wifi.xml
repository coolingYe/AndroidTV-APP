<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZEEWAIN"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_pwd"
        android:layout_width="470dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_pwd_rectangle_selector_ae8"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:text="zeewain521"
        android:textColor="@drawable/selector_text_c66_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_name" />

    <TextView
        android:id="@+id/connect_wifi"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_connect_wifi_selector"
        android:focusable="true"
        android:gravity="center"
        android:text="连接"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@+id/input_pwd"
        app:layout_constraintTop_toBottomOf="@+id/show_pwd"
        app:layout_goneMarginLeft="66dp"
        app:layout_goneMarginTop="50dp" />

    <TextView
        android:id="@+id/back"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginLeft="75dp"
        android:background="@drawable/bg_connect_wifi_selector"
        android:focusable="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/connect_wifi"
        app:layout_constraintTop_toTopOf="@+id/connect_wifi" />

    <ImageView
        android:id="@+id/show_pwd"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:src="@drawable/bg_pwd_selector"
        app:layout_constraintLeft_toLeftOf="@+id/input_pwd"
        app:layout_constraintTop_toBottomOf="@+id/input_pwd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:text="显示密码"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/show_pwd"
        app:layout_constraintLeft_toRightOf="@+id/show_pwd"
        app:layout_constraintTop_toTopOf="@+id/show_pwd" />

</androidx.constraintlayout.widget.ConstraintLayout>
