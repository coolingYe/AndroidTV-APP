<?xml version="1.0" encoding="utf-8"?>
<net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="593dp"
    android:layout_height="410dp">

    <net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout
        android:id="@+id/head_root"
        android:layout_width="593dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_rectangle_dialog_white"
        android:focusable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:text="手势控制"
            android:textColor="@color/src_c33"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="26dp"
            android:focusable="false"
            android:src="@mipmap/img_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout>


    <net.sunniwell.aar.focuscontrol.layout.FocusControlLinearLayout
        android:layout_width="593dp"
        android:layout_height="340dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/shape_rectangle_dialog_grey"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_root">

        <net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout
            android:id="@+id/gesture_active"
            android:layout_width="564dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_wifi_detail_selector"
            android:focusable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/head_root">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:duplicateParentState="true"
                android:text="手势激活"
                android:textColor="@drawable/selector_text_bg"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/gesture_active_switch"
                android:layout_width="36dp"
                android:layout_height="18dp"
                android:layout_marginRight="13dp"
                android:checked="false"
                android:thumb="@drawable/thumb_bg"
                android:track="@drawable/img_manual_switch_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout>

        <net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout
            android:id="@+id/gesture_des"
            android:layout_width="564dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_wifi_detail_selector"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:duplicateParentState="true"
                android:text="手势说明"
                android:textColor="@drawable/selector_text_bg"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout>

    </net.sunniwell.aar.focuscontrol.layout.FocusControlLinearLayout>

</net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout>
