<?xml version="1.0" encoding="utf-8"?>
<net.sunniwell.aar.focuscontrol.layout.FocusControlLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@drawable/shape_rectangle_white"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="16dp"
            android:layout_height="13dp"
            android:layout_marginLeft="12dp"
            android:focusable="false"
            android:src="@mipmap/img_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="AI助手"
            android:textColor="#000000"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout>

    <net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout
        android:id="@+id/gesture_set"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/bg_network_focus_selector"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:duplicateParentState="true"
            android:text="手势控制"
            android:textColor="@drawable/selector_text_bg"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout>

    <net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout
        android:id="@+id/voice_set"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/bg_network_focus_selector"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:duplicateParentState="true"
            android:text="语音控制"
            android:textColor="@drawable/selector_text_bg"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout>

    <net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout
        android:id="@+id/ai_helper_set"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/bg_network_focus_selector"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:duplicateParentState="true"
            android:text="AI助手"
            android:textColor="@drawable/selector_text_bg"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </net.sunniwell.aar.focuscontrol.layout.FocusControlConstraintLayout>
</net.sunniwell.aar.focuscontrol.layout.FocusControlLinearLayout>
