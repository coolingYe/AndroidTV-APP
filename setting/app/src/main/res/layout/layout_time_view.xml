<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_time_root"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/sign_up"
        android:layout_width="16dp"
        android:layout_height="9dp"
        android:background="@drawable/ic_sign_up"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/time_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/time_text"
        android:layout_width="92dp"
        android:layout_height="51dp"
        android:textSize="21sp"
        android:duplicateParentState="true"
        android:gravity="center"
        android:textColor="@drawable/bg_button_text_color_selector"
        android:background="@drawable/bg_pwd_rectangle_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="24"/>

    <View
        android:id="@+id/sign_down"
        android:layout_width="16dp"
        android:layout_height="9dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/ic_sign_down"
        app:layout_constraintTop_toBottomOf="@+id/time_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>