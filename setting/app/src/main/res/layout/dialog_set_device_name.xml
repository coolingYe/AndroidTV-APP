<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入设备名称"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="470dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_pwd_rectangle_selector"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="AI互动屏盒子"
        android:textColor="@drawable/selector_text_c66_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_name" />

    <TextView
        android:id="@+id/save_name"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bg_connect_wifi_selector"
        android:focusable="true"
        android:gravity="center"
        android:text="保存"
        android:textColor="@drawable/selector_text_c66_bg"
        app:layout_constraintBottom_toBottomOf="@+id/input_name"
        app:layout_constraintLeft_toRightOf="@+id/input_name"
        app:layout_constraintTop_toTopOf="@+id/input_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
