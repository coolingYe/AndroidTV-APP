<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/src_f0f">

    <View
        android:id="@+id/agreement_back"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/ic_back"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/agreement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agreement_1"
        android:textColor="@color/src_c33"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="@+id/agreement_back"
        app:layout_constraintBottom_toBottomOf="@+id/agreement_back"
        app:layout_constraintStart_toEndOf="@+id/agreement_back"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/agreement_back"
        android:textColor="#333333" />
</androidx.constraintlayout.widget.ConstraintLayout>