<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_size"
            android:gravity="center"
            android:text="紫星助手"
            android:textColor="#333"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_main_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="17dp"
            android:contentDescription="@null"
            android:padding="5dp"
            android:src="@mipmap/ic_main_settings"
            app:layout_constraintBottom_toBottomOf="@+id/tv_main_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_main_title" />

        <LinearLayout
            android:id="@+id/ll_main_wifi_connect_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_title">

            <ImageView
                android:id="@+id/iv_main_wifi_level"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:id="@+id/tv_main_wifi_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="未连接WiFi"
                android:textColor="#333"
                android:textSize="13sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_main_scan_add"
            android:layout_width="342dp"
            android:layout_height="135dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@null"
            android:src="@mipmap/img_main_scan_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_main_wifi_connect_info" />

        <FrameLayout
            android:layout_width="342dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_main_scan_add"
            app:layout_constraintStart_toStartOf="@+id/iv_main_scan_add"
            app:layout_constraintTop_toBottomOf="@+id/iv_main_scan_add">

            <LinearLayout
                android:id="@+id/ll_main_network_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/img_wifi_disconnect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="当前未连接WIFI"
                    android:textColor="#999"
                    android:textSize="15sp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_network_settings"
                    android:layout_width="165dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="26dp"
                    app:cardBackgroundColor="#B880FF"
                    app:cardCornerRadius="17dp"
                    app:cardElevation="0dp"
                    app:rippleColor="#30FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="设置无线网络"
                        android:textColor="#FFF"
                        android:textSize="14sp" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="APP请与紫星设备连接同一wifi"
                    android:textColor="#999"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_no_device_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/img_nothing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="当前无关联设备，请扫码添加设备"
                    android:textColor="#999"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_main_devices_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="#000"
                android:textSize="16sp" />

            <com.zee.device.helper.widgets.SwipeRecyclerView
                android:id="@+id/recycler_view_main_device"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="36dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>