<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/localSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/remoteSurfaceView"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LogcatView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="13dp"
            android:contentDescription="@null"
            android:src="@mipmap/icon_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/camera_unfull"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_back"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_back"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摄像头启用中"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_camera_switch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#30FFFFFF">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:src="@mipmap/ic_camera_switch" />
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/camera_unfull"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="13dp"
            android:src="@mipmap/icon_unfull"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/camera_resolution"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@mipmap/icon_resolution"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_resolution"
        android:layout_width="58dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:layout_constraintStart_toStartOf="@+id/camera_resolution"
        app:layout_constraintEnd_toEndOf="@+id/camera_resolution"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/icon_box"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_camera_scale_360p"
            android:layout_width="58dp"
            android:layout_height="24dp"
            android:text="360P"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:padding="2dp"
            android:gravity="center"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="46dp"
            android:layout_height="1dp"
            android:background="#CCCCCC"/>

        <TextView
            android:id="@+id/tv_camera_scale_720p"
            android:layout_width="58dp"
            android:layout_height="24dp"
            android:text="720P"
            android:textColor="@color/colorWhite"
            android:padding="2dp"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_tip_mark"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_call_tip_mark_p"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_tip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="52dp"
        android:text="摄像头使用注意事项:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/iv_tip_mark" />

    <TextView
        android:id="@+id/tv_tip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="6dp"
        android:text="1、当前默认为您打开的是手机前置摄像头；\n2、请保证您的上半身处于取景框内；\n3、最佳的取景距离为1.5-2.5米；\n4、请确认当前“把式互动”应用内已经出现您的人物形象；\n5、若您将应用退至后台摄像头将会关闭"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_tip_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip_title" />


</androidx.constraintlayout.widget.ConstraintLayout>