<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.WirelessCameraActivity"
    android:background="@mipmap/img_main_bg">

    <com.zee.device.base.widgets.CustomActionBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        app:title="摄像头连接"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="337dp"
        android:layout_height="130dp"
        android:background="@mipmap/img_connect_lan_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="23dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:text="局域网"
            />

        <TextView
            android:id="@+id/tv_connect_camera_lan"
            android:layout_width="90dp"
            android:layout_height="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="21dp"
            android:layout_marginStart="23dp"
            android:background="@drawable/shape_c15_frame_9c82fc_ffffff"
            android:textSize="12sp"
            android:textColor="#9490F6"
            android:gravity="center"
            android:text="点击连接"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="337dp"
        android:layout_height="130dp"
        android:background="@mipmap/img_connect_wifi_direct_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="23dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:text="WiFi直连"
            />

        <TextView
            android:id="@+id/tv_connect_camera_direct"
            android:layout_width="90dp"
            android:layout_height="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="21dp"
            android:layout_marginStart="23dp"
            android:background="@drawable/shape_c15_frame_61a3f9_ffffff"
            android:textSize="12sp"
            android:textColor="#60A2F9"
            android:gravity="center"
            android:text="点击连接"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>