<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="164dp"
    android:background="@drawable/shape_round_dialog_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp"
            android:gravity="center"
            android:text="当前设备连接失败请重新尝试"
            android:paddingStart="@dimen/src_dp_16"
            android:paddingEnd="@dimen/src_dp_16"
            android:textSize="16sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_dialog_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_message"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="*确认设备与本地在同一局域网\n*重新扫码添加设备"
            android:textSize="12sp"
            android:textColor="#999"
            android:visibility="gone"/>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_dialog_confirm"
            android:layout_width="190dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="22dp"
            app:cardBackgroundColor="#FFFFFF"
            app:rippleColor="#30FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_dialog_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确认"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:background="@drawable/gradient_h_c16_bf8aff_7c75ff"/>

        </com.google.android.material.card.MaterialCardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_positive_cancel_dialog"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="22dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_dialog_cancel"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mcv_dialog_positive"
                app:cardBackgroundColor="@android:color/transparent"
                app:rippleColor="#30FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                >

                <TextView
                    android:id="@+id/tv_dialog_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="取消"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:background="#E8E8E8"/>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_dialog_positive"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mcv_dialog_cancel"
                app:cardBackgroundColor="@android:color/transparent"
                app:rippleColor="#30FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                >

                <TextView
                    android:id="@+id/tv_dialog_positive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="确认"
                    android:textSize="14sp"
                    android:textColor="#FFF"
                    android:background="@drawable/gradient_h_c16_bf8aff_7c75ff"/>

            </com.google.android.material.card.MaterialCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>