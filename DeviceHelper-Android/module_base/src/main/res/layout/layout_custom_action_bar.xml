<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_launcher_bar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_action_bar_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/img_action_bar_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:padding="@dimen/src_dp_10"
            android:layout_marginStart="5dp"
            android:src="@mipmap/ic_action_bar_back_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_action_bar_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_action_bar_back"
            app:layout_constraintLeft_toRightOf="@+id/img_action_bar_back"
            app:layout_constraintRight_toLeftOf="@+id/img_action_bar_filter"
            app:layout_constraintTop_toTopOf="@+id/img_action_bar_back" />

        <TextView
            android:id="@+id/tv_action_bar_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:paddingTop="@dimen/src_dp_11"
            android:paddingBottom="@dimen/src_dp_11"
            android:textStyle="bold"
            android:maxLines="2"
            android:visibility="gone"
            android:textColor="#333333"
            android:textSize="@dimen/src_font_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_action_bar_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <FrameLayout
            android:id="@+id/fl_action_bar_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_action_bar_back"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_action_bar_filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:padding="@dimen/src_dp_10"
            android:visibility="invisible"
            android:layout_marginEnd="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>